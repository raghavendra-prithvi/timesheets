<% if session[:user_id] %>
<%@user = User.find(session[:user_id]) %>


<div class="container">
<div class="navbar-header">
<h4>Time Entry Form</h4>
</div>
<!-- Log out button -->
<div class="pull-right"><h5><%= @user.name %> </br> <a href=#>Log Out</a></h5></div>
</div>
<div class="container">
<!-- Datepicker -->
<div class="pull-right">
Date:
<input type="text" id="datepicker" placeholder="Date">
</div>
<!-- Table for hourly input -->
<div class="row">
<div class="col-lg-12">
<table class="table table-striped table-bordered" id="timeTable">
<form role="form"">
<div class="form-group">
<thead>
<tr>
<th>
<button type="button" class="btn btn-default" id="add">Add Row</button></th>
<th>Monday</th>
<th>Tuesday</th>
<th>Wednesday</th>
<th>Thursday</th>
<th>Friday</th>
<th>Saturday</th>
<th>Sunday</th>
</tr>
</thead>
<tbody>
<tr id="lastRow">
<td>
<label for="project">Project </label>
<select id="project" name="project">
<option>Option one</option>
<option>Option two</option>
</select>
</td>
<td>
<input id="monday" name="monday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<input id="tuesday" name="tuesday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<input id="wednesday" name="wednesday" type="text" placeholder="Hours" class="form-control"/></td>
<td>
<input id="thursday" name="thursday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<input id="friday" name="friday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<input id="saturday" name="saturday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<input id="sunday" name="sunday" type="text" placeholder="Hours" class="form-control" /></td>
<td>
<button type="button" class="btn btn-default" id="remove">Remove</button></td>
</tr>

<tr>
  <td colspan="9" align="center" style="text-align:center">
    <button type="button" class="btn-large btn-success" id="Save">Save</button>
  </td>
</tr>
</tbody>
</table>
</div>
<% end %>

